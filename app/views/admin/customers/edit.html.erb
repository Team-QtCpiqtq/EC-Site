<%= render 'admin/header' %>
<h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h1>

<%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
  <%= render "public/shared/error_messages", resource: @customer %>

  <p>会員ID</p>
  <p><%= @customer.id %></p>

  <div class="field">
    <%= f.label :'氏名' %>
    <%= f.text_field :last_name, autofocus: true %>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :'フリガナ' %>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>
  <div class="field">
    <%= f.label :'郵便番号(ハイフンなし)' %>
    <%= f.text_field :postal_code %>
  </div>
  <div class="field">
    <%= f.label :'住所' %>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :'電話番号(ハイフンなし)' %>
    <%= f.text_field :telephone_number %>
  </div>
  <div class="field">
    <%= f.label :'メールアドレス' %>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :'会員ステータス' %>
    <%= f.radio_button :is_active, "true" %>有効 <%= f.radio_button :is_active, "false" %>退会
  </div>

  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>

<% end %>